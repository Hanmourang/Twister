#!/bin/bash

PYTHON=/usr/bin/python

if [ -n "$TWISTER_PATH" ]
then
	kill -9 `ps ax | grep python | grep httpserver.py | awk '{print $1}'`
	echo TWISTER_PATH set to: "$TWISTER_PATH".
	nohup $PYTHON -u $TWISTER_PATH/server/httpserver/httpserver.py 8080 > $TWISTER_PATH/http_log.log &
	echo "HTTP Server is now running in background."
else
	echo TWISTER_PATH variable enviroment is not defined!
fi
