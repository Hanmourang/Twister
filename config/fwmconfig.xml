<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!--
 Master config file for TSC.
 
 Logs Path: Where CE and PE write their getLogs(). Reports Path: Where all reports are saved.
 Test Suite Config: All info about the current Test Suite (Test Plan).
--><Root>
    <FileType>config</FileType>
    <UseSharedDb>false</UseSharedDb>
    <SysSutPath>/opt/twister/config/sut</SysSutPath>
    <SutPath>$HOME/twister/config/sut</SutPath>
    <TestCaseSourcePath>$HOME/twister/demo</TestCaseSourcePath>
    <LibsPath>$HOME/twister/libs</LibsPath>
    <UsersPath>$HOME/twister/config/projects</UsersPath>
    <PredefinedSuitesPath>$HOME/twister/config/predefined</PredefinedSuitesPath>
    <ArchiveLogsPath>$HOME/twister/logs_archive</ArchiveLogsPath>
    <ArchiveLogsPathActive>false</ArchiveLogsPathActive>
    <LogsPath>$HOME/twister/logs</LogsPath>
    <LogFiles>
        <logRunning>log_running.log</logRunning>
        <logDebug>log_debug.log</logDebug>
        <logSummary>log_summary.log</logSummary>
        <logTest>log_test.log</logTest>
        <logCli>CLI.log</logCli>
    </LogFiles>
    <DbConfigFile>$HOME/twister/config/db.xml</DbConfigFile>
    <EmailConfigFile>$HOME/twister/config/email.xml</EmailConfigFile>
    <GlobalParams>$HOME/twister/config/globals.xml</GlobalParams>
    <TestConfigPath>$HOME/twister/config/test_config</TestConfigPath>
</Root>
